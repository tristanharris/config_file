[core]
	excludesfile = ~/.git_global_ignore
	autocrlf = input
	pager = less -x2
	whitespace = trailing-space,space-before-tab

[alias]
	st = status
	ci = commit
	co = checkout
	todo = branch -a --no-merged
	lol = log --pretty=oneline --abbrev-commit --graph --decorate
	last = log --pretty=oneline --abbrev-commit --decorate -n1
	d = diff
	ds = diff --staged
	dw = diff --color-words
	dsw = diff --color-words --staged
	ff = merge --ff-only
	up = pull --ff-only
	#git remote add bak server:/path/to/backup/repo
	bak = push --mirror bak

[color]
	diff = auto
	status = auto
	branch = auto
[apply]
	whitespace = warn
[diff]
	renames = copies
	guitool = meld
	tool = meld
	mnemonicprefix = true

